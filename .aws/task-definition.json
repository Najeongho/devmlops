{
    "family": "task-family",
    "networkMode": "awsvpc",
    "containerDefinitions": [
      {
        "name": "web-container",
        "image": "web-repo:latest",
        "portMappings": [
          {
            "containerPort": 80,
            "hostPort": 80,
            "protocol": "tcp"
          }
        ],
        "essential": true
      },
      {
        "name": "was-container",
        "image": "was-repo:latest",
        "essential": true
      },
      {
        "name": "db-container",
        "image": "db-repo:latest",
        "essential": true
      }
    ],
    "requiresCompatibilities": [
      "FARGATE"
    ],
    "cpu": "512",
    "memory": "1024"
  }